{
	"compilerOptions": {
		"target": "es2016",
		"module": "commonjs",
		"resolveJsonModule": true,
		"declaration": true,
		"declarationMap": true,
		"outDir": "./dist",
		"declarationDir": "./types",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"noImplicitOverride": true,
		"noUnusedLocals": true
	},
	"exclude": ["test.ts", "dist", "types", "tests"]
}
